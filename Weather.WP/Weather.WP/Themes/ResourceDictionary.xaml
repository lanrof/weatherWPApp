<ResourceDictionary
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:system="clr-namespace:System;assembly=mscorlib"
 xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone">


    <Color x:Key="DarkBlueColor">#3f6f9f</Color>
    <Color x:Key="BlueColor">#108DE0</Color>
    <Color x:Key="BlackColor">#000000</Color>
    <Color x:Key="RedColor">#D12D17</Color>
    <Color x:Key="WhiteColor">#ffffff</Color>
    <Color x:Key="WhiteColorWithOpacity">#50ffffff</Color>

    <SolidColorBrush x:Key="DarkBrush"  Color="{StaticResource DarkBlueColor}"/>
    <SolidColorBrush x:Key="BlueBrush"  Color="{StaticResource BlueColor}"/>
    <SolidColorBrush x:Key="BlackBrush"  Color="{StaticResource BlackColor}"/>
    <SolidColorBrush x:Key="RedBrush"  Color="{StaticResource RedColor}"/>
    <SolidColorBrush x:Key="WhiteBrush"  Color="{StaticResource WhiteColor}"/>
    <SolidColorBrush x:Key="WhiteOpacityBrush"  Color="{StaticResource WhiteColorWithOpacity}"/>
    
</ResourceDictionary>